.container {
  padding: 36rpx;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: -1;
}

input,
.received-msg-box {
  width: 100%;
  border: 1px solid #d7dae1;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  min-height: 64rpx;
  margin-bottom: 20rpx;
  background-color: #fdfdfd71;
}

.received-msg-box {
  padding: 20rpx;
  min-height: 450rpx;
  font-family: Menlo, Courier, monospace;
  word-break: break-word;
  font-weight: 800;
  line-height: 1.4;
}

.received-msg-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.clear-btn {
  position: absolute;
  top: 8rpx;
  right: 12rpx;
  font-size: 24rpx;
  color: #007aff;
  background-color: rgba(0, 0, 0, 0.123);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  z-index: 10;
}

.label {
  font-size: 28rpx;
  color: #90949c;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.is-flex {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

button[type="primary"],
button[type="warn"] {
  width: 40% !important;
  font-size: 30rpx;
  font-weight: normal;
  margin: 0 !important;
  font-weight: 600;
}

.custom-subscribe-btn {
  opacity: 1 !important;
  background-color: #25be60 !important; 
  color: #ffffff !important;
  border: none !important;
}

.readonly-host {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  min-height: 64rpx;
  margin-bottom: 20rpx;
  line-height: 64rpx;
  border: 1px solid #d7dae1;
  border-radius: 8rpx;
  background-color: #f8f8f8c9;
  color: #333;
  text-align: center; 
  font-weight: 600;
}

.to_control{
  background-color: #68adfcfb;
  color: rgb(255, 255, 255);
  font-family: Menlo, Courier, monospace;
  font-weight: 800;
  font-size: 40rpx;
}

button:active {
  opacity: 0.8;
}